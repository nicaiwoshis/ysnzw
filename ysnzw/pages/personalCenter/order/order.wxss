/* pages/personalCenter/order/order.wxss */
/*头部  */
.head{
  text-align: center;
  border: 1px solid #d9d9d9;
  height: 50px;
  line-height: 50px;
}

/*买家的头像呢称  */
.box{
  margin-top:5%; 
  border: 1px solid #d9d9d9;
  display: flex;
  font-size: 0.8rem;
  margin-bottom: 5%;
}

.buyersimg{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid red;
  border-radius: 50%;
  margin: 5%;
}
.buyertext{
  margin: 10rpx;
}
/*订单信息  */
.order{
  border: 1px solid #d9d9d9; 
  margin-bottom: 10%;
}
.ordertext1{
  font-size: 0.7rem;
  margin: 5%;
}
.textbox{
  margin: 5%;
  margin-left: 15%;
}
/*价格信息  */
.pay{
  border: 1px solid #d9d9d9; 
  margin-bottom: 5%;
}
.pay view{
  margin: 2%;
  position: relative;
}
.pay text{
  /* margin-left: 60%; */
  position: absolute;
  right: 5%;
}
/*订单号和时间  */
.orderID{
  border: 1px solid #d9d9d9; 
  margin-bottom: 5%;
}
.orderID view{
  margin: 5%;
}
.orderID button{
  width: 20%;
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  position: absolute;
  right: 0px;
  
}
.view1{
  position: relative;
  /* border: 1px solid red; */
}
/*底部  */
.footer{
  width: 30%;
  font-size: 0.8rem;
  margin-bottom: 10%;
}