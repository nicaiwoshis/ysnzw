<view class='contains'>
  <view>个人简介:</view>
  <textarea placeholder='个人介绍' class='introduce' bindinput='getText1'></textarea>

  <view class='contain-item'>
    <view>我的手机:</view>
    <input placeholder='请输入你的手机号码' bindinput='getText2'></input>
  </view>
  
  <view class='contain-item'>
    <view>我的邮箱:</view>
    <input placeholder='请输入你的邮箱账号' bindinput='getText3'></input>
  </view>

  <view class='contain-item'>
    <view>收费标准:XX元/次</view>
    <view>
      <input class='charge' bindinput='getText4'></input>
    </view>
  </view>

<!--按钮部分  -->
  <view class='footer'>
    <button bindtap='back'>上一步</button>
    <button bindtap='next'>下一步</button>  
  </view>

</view>